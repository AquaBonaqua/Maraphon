<Page x:Class="maraphonapp._1Main.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:maraphonapp._1Main"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="1000"
      Title="Page1">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Button FontFamily="Open Sans Light" Height="50" Width="370" Content="Я участвовал ранее"  FontSize="20" Name="Runner" Click="Runner_Click" />
            <Button FontFamily="Open Sans Light" Height="50" Width="370" Content="Я новый участник"  FontSize="20" Name="Sponsor" Click="Sponsor_Click"/>
        </StackPanel>
        <Button FontFamily="Open Sans Light" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Height="41" Margin="32,20,0,0" Name="BtnBack" Click="BtnBack_Click" Content="Назад" />
    </Grid>
</Page>
